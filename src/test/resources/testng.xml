<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="GraphQL API Test Suite" verbose="1" parallel="methods" thread-count="3">
    
    <listeners>
        <!-- Add listeners here if needed for reporting -->
    </listeners>
    
    <!-- Smoke Test Suite - Quick validation tests -->
    <test name="Smoke Tests" group-by-instances="true">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="TestGetCall"/>
            <class name="TestSignIn"/>
        </classes>
    </test>
    
    <!-- Full Regression Test Suite -->
    <test name="Regression Tests" group-by-instances="true">
        <classes>
            <class name="TestGetCall"/>
            <class name="TestPostCall"/>
            <class name="TestPatchCall"/>
            <class name="TestPatchCallWithGet"/>
            <class name="TestDeleteCall"/>
            <class name="TestSignIn"/>
            <class name="TestSignUp"/>
        </classes>
    </test>
    
</suite>

